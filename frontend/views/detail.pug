doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6' crossorigin='anonymous')
  link(href='/public/css/style.css' rel='stylesheet' type='text/css')
  link(rel='icon' href='/public/img/logo.png' type='image/icon type')
  title Detail phone
.header
  .nav-bar
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        a.navbar-brand(href='/admin')
          img(src='/public/img/logo.png' style='width: 30px; height: 30px')
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.btn.btn-primary(href='/admin/listproduct' role='button') List product
            li.nav-item
              a.btn.btn-primary(href='/admin/listbill' role='button') List bill
            li.nav-item
              a.btn.btn-primary(href='/admin/addproduct' role='button') Add product
          a.btn.btn-primary(href='/admin/logout' role='button') Logout
.main
  .container
    form(method="POST" action="/admin/listproduct")
      .mb-3
        label.form-label(for='title') Title
        input#title.form-control(type='text' name='title' placeholder='Title' aria-label='title' value=product.title)
      .mb-3
        label.form-label(for='type') Type
        input#title.form-control(type='text' name='type' placeholder='Title' aria-label='title' value=product.title)
      .mb-3
        label.form-label(for='imageUrl') Image url
        input#title.form-control(type='text' name='imageUrl' placeholder='Title' aria-label='title' value=product.imageUrl)
      .mb-3
        label.form-label(for='price') Price
        input#title.form-control(type='text' name='price' placeholder='Title' aria-label='title' value=product.price)
      .mb-3
        label.form-label(for='description') Description
        input#title.form-control(type='text' name='description' placeholder='Title' aria-label='title' value=product.description)
      button#btn-submit.btn.btn-primary(type='submit') Save
      a#btn-delete.btn.btn-primary(href="/admin/deleteproduct") Delete
      

