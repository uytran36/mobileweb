              a.btn.btn-primary(href='/admin/addproduct' role='button') Add product
          a.btn.btn-primary(href='/admin/logout') Logout
            
.main
  .container
    .list-products
      .row
        each bill in bills
          .card(style='width: 18rem;')
            .card-body
              h5.card-title=bill.name
              .card-text=bill.phone
              .card-text.address=bill.address
              .card-text.price=bill.price
              a.btn.btn-primary(href='/admin/editbill/'+bill._id value=bill._id) S&#x1EED;a
        
